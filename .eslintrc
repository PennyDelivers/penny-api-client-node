{
  "extends" : [
    "standard"
  ],
  "env"     : {
    "es6"     : true,
    "node"    : true,
    "mocha"   : true
  },
  "ecmaFeatures": {
    "modules" : false
  },
  "globals" : {
    "expect": true,
    "fixtures": true,
    "sinon": true
  },
  "rules": {
    "strict": [0, "global"],
    "semi" : [2, "always"],
    "space-before-function-paren": [2, {"anonymous": "never", "named": "never"}],
    "arrow-spacing": 1,
    "space-before-blocks": 1,
    "no-spaced-func": 1,
    "curly": 1,
    "comma-dangle": [2, "always-multiline"],
    "generator-star-spacing": [2, {"before": true, "after": false}]
  }
}
